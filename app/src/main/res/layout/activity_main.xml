<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
                android:background="#000000"
>
    <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.chamo.megapo.player.VideoPlayer
                android:id="@+id/video_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-0dp"
                android:layout_marginBottom="-0dp">
            <ImageView
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:id="@+id/image_music"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/music"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            <ImageView
                    android:layout_below="@id/image_music"
                    android:visibility="invisible"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:id="@+id/image_voice"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/voice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            <ImageView
                android:id="@+id/image_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/image_voice"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:background="@mipmap/next"
                android:visibility="invisible" />
            <ImageView
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:id="@+id/image_video"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@mipmap/video"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <ImageView
                android:id="@+id/video_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </com.chamo.megapo.player.VideoPlayer>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:visibility="invisible">

        <TextView
                android:id="@+id/tv_log"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scrollbars="vertical"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="visible">

        </TextView>
    </LinearLayout>
</RelativeLayout>